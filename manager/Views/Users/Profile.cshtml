@using manager.Models
@using Newtonsoft.Json
@using manager.Entities
@{
    var user = Context.Session.GetString(Constants.SessionUserData);
    var userInfo = JsonConvert.DeserializeObject<TblUser>(user);
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xxl-3">
            <div class="card">
                <div class="card-body p-4">
                    <div class="text-center">
                        <div class="profile-user position-relative d-inline-block mx-auto  mb-4">
                            <img id="user-profile-image" src="@userInfo.FImage" class="rounded-circle avatar-xl img-thumbnail user-profile-image material-shadow" alt="user-profile-image">
                            <div class="avatar-xs p-0 rounded-circle profile-photo-edit">
                                <input id="profile-img-file-input" type="file" class="profile-img-file-input">
                                <label for="profile-img-file-input" class="profile-photo-edit avatar-xs">
                                    <span class="avatar-title rounded-circle bg-light text-body material-shadow">
                                        <i class="ri-camera-fill"></i>
                                    </span>
                                </label>
                            </div>
                        </div>
                        <h5 class="fs-16 mb-1">@($"{userInfo.FName} {userInfo.FLastname}")</h5>
                        <p class="text-muted mb-0">@userInfo.FUsername</p>
                    </div>
                </div>
            </div>
            <!--end card-->
        </div>
        <!--end col-->
        <div class="col-xxl-9">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs-custom rounded card-header-tabs border-bottom-0" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" data-bs-toggle="tab" href="#personalDetails" role="tab" aria-selected="true">
                                <i class="fas fa-home"></i><span data-key="t-personaldetails"> Personal Details</span>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-bs-toggle="tab" href="#changePassword" role="tab" aria-selected="false" tabindex="-1">
                                <i class="far fa-user"></i><span data-key="t-changepassword"> Change Password</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-4">
                    <div class="tab-content">
                        <div class="tab-pane active show" id="personalDetails" role="tabpanel">
                            <form action="javascript:void(0);">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label for="firstnameInput" class="form-label" data-key="t-firstname">First Name</label>
                                            <input type="text" class="form-control" id="firstnameInput" placeholder="Enter your firstname" value="@userInfo.FName" spellcheck="false" data-ms-editor="true">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label for="lastnameInput" class="form-label" data-key="t-lastname">Last Name</label>
                                            <input type="text" class="form-control" id="lastnameInput" placeholder="Enter your lastname" value="@userInfo.FLastname" spellcheck="false" data-ms-editor="true">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label for="phonenumberInput" class="form-label" data-key="t-phonenumber">Phone Number</label>
                                            <input type="text" class="form-control" id="phonenumberInput" placeholder="Enter your phone number" value="@userInfo.FMobile" spellcheck="false" data-ms-editor="true">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label for="emailInput" class="form-label" data-key="t-emailaddress">Email Address</label>
                                            <input type="email" class="form-control" id="emailInput" placeholder="Enter your email" value="@userInfo.FEmail">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label for="JoiningdatInput" class="form-label" data-key="t-address">Address</label>
                                            <input type="text" class="form-control" id="addressInput" placeholder="Enter your address" value="@userInfo.FAddress" spellcheck="false" data-ms-editor="true">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <!--end col-->
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            <label for="cityInput" class="form-label" data-key="t-city">City</label>
                                            <input type="text" class="form-control" id="cityInput" placeholder="City" value="@userInfo.FCity" spellcheck="false" data-ms-editor="true">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            <label for="countryInput" class="form-label" data-key="t-country">Country</label>
                                            <input type="text" class="form-control" id="countryInput" placeholder="Country" value="@userInfo.FProvince" spellcheck="false" data-ms-editor="true">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            <label for="zipcodeInput" class="form-label" data-key="t-zipcode">Zip Code</label>
                                            <input type="text" class="form-control" minlength="5" maxlength="6" id="zipcodeInput" placeholder="Enter zipcode" value="@userInfo.FPostcode" spellcheck="false" data-ms-editor="true">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-12">
                                        <div class="hstack gap-2 justify-content-end">
                                            <button id="updateuserinfo" type="button" class="btn btn-primary">Updates</button>
                                        </div>
                                    </div>
                                    <!--end col-->
                                </div>
                                <!--end row-->
                            </form>
                        </div>
                        <!--end tab-pane-->
                        <div class="tab-pane" id="changePassword" role="tabpanel">
                            <form action="javascript:void(0);">
                                <div class="row g-2">
                                    <div class="col-lg-4">
                                        <div>
                                            <label for="oldpasswordInput" class="form-label">Old Password*</label>
                                            <input type="password" class="form-control" id="oldpasswordInput" placeholder="Enter current password">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-4">
                                        <div>
                                            <label for="newpasswordInput" class="form-label">New Password*</label>
                                            <input type="password" class="form-control" id="newpasswordInput" placeholder="Enter new password">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-4">
                                        <div>
                                            <label for="confirmpasswordInput" class="form-label">Confirm Password*</label>
                                            <input type="password" class="form-control" id="confirmpasswordInput" placeholder="Confirm password">
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-12">
                                        <div class="text-end">
                                            <button type="button" id="changepassword" class="btn btn-success">Change Password</button>
                                        </div>
                                    </div>
                                    <!--end col-->
                                </div>
                                <!--end row-->
                            </form>
                        </div>
                        <!--end tab-pane-->
                    </div>
                </div>
            </div>
        </div>
        <!--end col-->
    </div>
    <!--end row-->

</div>
<script>
    $('#updateuserinfo').click(function () {
        var formData = new FormData();
        formData.append("firstnameInput", $('#firstnameInput').val());
        formData.append("lastnameInput", $('#lastnameInput').val());
        formData.append("phonenumberInput", $('#phonenumberInput').val());
        formData.append("emailInput", $('#emailInput').val());
        formData.append("addressInput", $('#addressInput').val());
        formData.append("cityInput", $('#cityInput').val());
        formData.append("countryInput", $('#countryInput').val());
        formData.append("zipcodeInput", $('#zipcodeInput').val());

        $.ajax({
            url: '/Users/UpadateMyUser',
            type: 'POST',
            data: formData,
            processData: false, // ห้าม jQuery แปลง formData เป็น string
            contentType: false, // ให้ browser จัดการ Content-Type เอง
            success: function (response) {
                Swal.fire({
                    title: 'User!',
                    text: 'Update Success!',
                    icon: 'success',
                    showCancelButton: false,
                    customClass: {
                        confirmButton: 'btn btn-primary w-xs me-2 mt-2',
                        cancelButton: 'btn btn-danger w-xs mt-2',
                    },
                    buttonsStyling: false,
                    showCloseButton: true
                });
            },
            error: function (xhr) {
                Swal.fire({
                    title: 'User!',
                    text: 'Update Error!',
                    icon: 'error',
                    showCancelButton: false,
                    customClass: {
                        confirmButton: 'btn btn-primary w-xs me-2 mt-2',
                        cancelButton: 'btn btn-danger w-xs mt-2',
                    },
                    buttonsStyling: false,
                    showCloseButton: true
                });
            }
        });
    });

    $('#changepassword').click(function () {
        if ($('#newpasswordInput').val() != $('#confirmpasswordInput').val()) {
            Swal.fire({
                title: 'User!',
                text: 'Passwords do not match!',
                icon: 'error',
                showCancelButton: false,
                customClass: {
                    confirmButton: 'btn btn-primary w-xs me-2 mt-2',
                    cancelButton: 'btn btn-danger w-xs mt-2',
                },
                buttonsStyling: false,
                showCloseButton: true
            });
            return;
        }

        var formData = new FormData();
        formData.append("oldpassword", $('#oldpasswordInput').val());
        formData.append("newpassword", $('#newpasswordInput').val());

        $.ajax({
            url: '/Users/ChangeMyPassword',
            type: 'POST',
            data: formData,
            processData: false, // ห้าม jQuery แปลง formData เป็น string
            contentType: false, // ให้ browser จัดการ Content-Type เอง
            success: function (response) {
                Swal.fire({
                    title: 'User!',
                    text: 'Change Password Success!',
                    icon: 'success',
                    showCancelButton: false,
                    customClass: {
                        confirmButton: 'btn btn-primary w-xs me-2 mt-2',
                        cancelButton: 'btn btn-danger w-xs mt-2',
                    },
                    buttonsStyling: false,
                    showCloseButton: true
                });
            },
            error: function (xhr) {
                Swal.fire({
                    title: 'User!',
                    text: 'Change Password Error!',
                    icon: 'error',
                    showCancelButton: false,
                    customClass: {
                        confirmButton: 'btn btn-primary w-xs me-2 mt-2',
                        cancelButton: 'btn btn-danger w-xs mt-2',
                    },
                    buttonsStyling: false,
                    showCloseButton: true
                });
            }
        });
    });

    $('#profile-img-file-input').on('change', function () {
        var file = this.files[0];
        if (!file) {
            alert("กรุณาเลือกไฟล์");
            return;
        }

        var formData = new FormData();
        formData.append("file", file);

        $.ajax({
            url: '/Users/UploadProfilePicture',
            type: 'POST',
            data: formData,
            processData: false, // ห้าม jQuery แปลง formData เป็น string
            contentType: false, // ให้ browser จัดการ Content-Type เอง
            success: function (response) {
                //alert("อัปโหลดสำเร็จ!");
                //console.log(response);

                Swal.fire({
                    title: 'User!',
                    text: 'Update Success!',
                    icon: 'success',
                    showCancelButton: false,
                    customClass: {
                        confirmButton: 'btn btn-primary w-xs me-2 mt-2',
                        cancelButton: 'btn btn-danger w-xs mt-2',
                    },
                    buttonsStyling: false,
                    showCloseButton: true
                });

                // แสดงภาพใหม่ที่อัปโหลด (ถ้ามี URL กลับมา)
                if (response.newProfilePictureUrl) {
                    //$('#user-profile-image').attr('src', response.newProfilePictureUrl);
                    location.reload();
                }
            },
            error: function (xhr) {
                let msg = "อัปโหลดล้มเหลว";
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    msg = xhr.responseJSON.message;
                }
                alert(msg);
                console.error("Upload failed:", xhr);
            }
        });
    });
</script>
@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}